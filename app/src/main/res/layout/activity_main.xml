<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

<!--    Enables DataBinding    -->
    <data>
        <variable
            name="phoneCardViewModel"
            type="com.nevrmd.phonebook.viewModel.PhoneCardViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:backgroundTint="#EEE1C6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:text="@={phoneCardViewModel.inputName}"
                android:id="@+id/etName"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/etName"
                android:textColor="#49454f"
                android:inputType="text" />

            <EditText
                android:text="@={phoneCardViewModel.phoneNumber}"
                android:id="@+id/etNumber"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="phone"
                android:ems="10"
                android:hint="@string/etNumber"
                android:textColor="#49454f"
                android:inputType="phone" />

            <Button
                android:id="@+id/btnTop"
                android:backgroundTint="#E3D4AD"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/btnTop"
                android:textColor="#49454f"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBottom"
                android:backgroundTint="#E3D4AD"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/btnBottom"
                android:textColor="#49454f"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPhoneCards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>